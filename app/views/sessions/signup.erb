<h4>Create User Account</h4>

<form action="/signup" method="post">
  <div class="input-field">
    <input type="text" name="user[first_name]" id="first_name">
    <label for="first_name">First Name</label>
  </div>
<div class="input-field">
    <input type="text" name="user[last_name]" id="last_name">
    <label for="last_name">Last Name</label>
  </div>
<div class="input-field">
    <input type="text" name="user[username]" id="username">
    <label for="username">Username</label>
  </div>
  <div class="input-field">
    <input type="password" name="user[password]" id="password">
    <label for="password">Password</label>
  </div>

<input type="submit" value="Signup" class="btn waves-effect waves-light">
</form>