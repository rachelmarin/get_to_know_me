<h2 class="purple-text lighten-3">Create A Sign Profile</h2>

<form action="/signs" method="post">
  <div class="input-field">
    <input id="name" name="sign[name]" type="text" class="validate">
    <label for="name">First & Last Name</label>
  </div>
  <div class="input-field">
    <input type="text" class="datepicker" name="sign[date_of_birth]" id="date_of_birth">
    <label for="date_of_birth">Birth Date</label>
  </div>
  
  <input type="submit" value="Create Sign Profile" class="btn purple lighten-3">
</form>


<script>
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>